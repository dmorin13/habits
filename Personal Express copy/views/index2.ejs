<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="style.css">
  <title>Habit</title>
</head>
<body>

    <section>
        <h2><i class="fa-solid fa-person-running"></i> My Habits<i class="fa-solid fa-chart-mixed"></i></h2>

        <form method = "post" action="/habitList">
        
          <input type="text" id="input" name = "habit" placeholder="What do you want to work on today?">

            <button type ="submit" class="btn">Add Habit 💪🏾 📝 </button>
          </form>
      </section>

    
        <!-- grid top row -->
      <section class="grid">
        <div class="grid-row">
          <div class="day"><span>Monday</span></div>
          <div class="day"><span>Tuesday</span></div>
          <div class="day"><span>Wednesday</span></div>
          <div class="day"><span>Thursday</span></div>    
          <div class="day"><span>Friday</span></div>  
          <div class="day"><span>Saturday</span></div>
          <div class="day"><span>Sunday</span></div>           
        </div> 
        <h2>Habit List</h2>
          
          <ul class="habit-list" id="habit-list">
            <!--  for (let habit of habitList){ %> -->

            <% for(var i=0; i<habit.length; i++) { %> 
              <% console.log(habit[i])%>
              <% let chekced= habit[i].checked%> <!--what is this [] . notation syntax targeting?  is .done a property ? -->
              <% <li class="habit" >%>
                <span data-checked<%=checked%>>
                   <%=habit[i].habit%></span>
                   <form method = "delete" action="/deleteHabit">
                    <button type ="submit" class="btn"><i class="fa-solid fa-ban"></i></button>
                    <button type ="submit" class="btn"> <i class="fa-solid fa-star-sharp"></i></button>
                  </form>
              </li>
          </ul>
          <div class="grid-row">
            <div class="checkOff"><input type="checkbox" id="mondayHabit1" name="mondayHabit" value="habitCompleted"></div>
            <div class="checkOff"><input type="checkbox" id="tuesdayHabit1" name="tuesdayHabit" value="habitCompleted"></div>
            <div class="checkOff"><input type="checkbox" id="wednesdayHabit1" name="wednesdayHabit" value="habitCompleted"></div>
            <div class="checkOff"><input type="checkbox" id="thursdayHabit1" name="thursdayHabit" value="habitCompleted"></div>
            <div class="checkOff"><input type="checkbox" id="fridayHabit1" name="fridayHabit" value="habitCompleted"></div>
            <div class="checkOff"><input type="checkbox" id="saturdayHabit1" name="saturdayHabit" value="habitCompleted"></div>
            <div class="checkOff"><input type="checkbox" id="sundayHabit1" name="sundayHabit" value="habitCompleted"></div>         
          </div> 
        <% } %>
      
        </section> 
        
      <section>
          <p>
            <%= habit.name %>
          </p>
          
      </section>
          
         
        <section> 
            <p>
              <!-- //boolean: met, not met, (met: 3 checks in a row)   -->
             <% {met: <%= habit.checked} %> %>
             <i class="fa-solid fa-list-check"></i>
      
            </p>
            <!-- //boolean:checked, not checked  -->
            <p> 
               <!-- habit.progress
              <i class="fa-solid fa-list-check"></i> -->
            </p>
        </section> 

        <!-- Display message according to habit status and progress goals met, if/ conditional  -->
      <div> 
        <h2 class="messageOne"></h2>
        <h2 class="messageTwo"></h2>
        <% const messageOne = document.querySelector('.messageOne')%>
        <%const messageTwo =document.querySelector('.messageTwo')%> 
        <%if( <%= habit.status='habitCompleted'%>){%>
            <%messageOne.innerText="You're on track! Keep it Up!"%>
          <%}else{%>
            <%messageOne.innerText="You're not there yet, but keep going,1 day at a time  !"%>
          <%}%>
      </div>
          
      

  <script src="main.js"></script>
</body>
</html>